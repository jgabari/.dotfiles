        "interval": 5,
        "format-icons": {
            "wifi": ["Û∞§ü ", "Û∞§¢ ", "Û∞§• ", "Û∞§® "],
            "ethernet": "Û∞àÄ ",
            "disconnected": "Û∞™é ",
            "disabled": "Û±ûê "
    }
    },

    "custom/power": {
