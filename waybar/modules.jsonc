            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        // "ignored-players": ["firefox"]
        "max-length": 1000,
        "interval": 1
    },

    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format": "{icon}",
        "tooltip-format-wifi": "Û∞§® {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "Û∞àÄ {ipaddr}",
        "tooltip-format-disconnected": "Û∞™é Disconnected",
