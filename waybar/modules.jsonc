{

    // Group Quicklinks
    "group/quicklinks": {
        "orientation": "horizontal",
        "modules": [
            "custom/filemanager",
            "custom/browser",
            "custom/terminal",
//          "custom/editor",
            "custom/obsidian"

         ]
    },

    // Group Time
    "group/time": {
        "orientation": "horizontal",
        "modules": [
        "custom/timer"
         ]
    },

    // Group Misc
"group/misc": {
    "orientation": "inherit",
    "drawer": {
        "transition-duration": 500,
        "children-class": "not-misc",
        "transition-right-to-left": false,
    },
    "modules": [
        "custom/misc",
        "custom/screenrecorder",
        "idle_inhibitor",
        "custom/timer"
    ]
},

        // Group Devices
    "group/devices": {
        "orientation": "horizontal",
        "modules": [
            "pulseaudio",
            "bluetooth",
            "custom/ddc_brightness",
            "network"
         ]
    },

        // Group System
    "group/system": {
        "orientation": "horizontal",
        "modules": [
            "custom/updates",
            "custom/mako",
            "custom/copyq",
            "custom/power"
         ]
    },

    "bluetooth": {
        "format": "Û∞ÇØ ",
        "format-disabled": "Û∞Ç≤ ", // an empty format will hide the module
        "format-connected": "Û∞Ç± {num_connections}",
        "on-click": "blueman-manager",
        "on-click-right": "blueman-manager",
        "tooltip-format": "Û∞ÇØ {device_alias}",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": "Û∞ÇØ {device_alias}"
    },

    "custom/cliphist": {
        "format": "Û∞Öç{}",
        "exec": "echo ; echo clipboard",
        "on-click": "sleep 0.1 && ~/.config/hypr/scripts/cliphist.sh c",
        "on-click-right": "sleep 0.1 && ~/.config/hypr/scripts/cliphist.sh d",
        "on-click-middle": "sleep 0.1 && ~/.config/hypr/scripts/cliphist.sh w",
        "interval" : 86400, // once every day
        "tooltip": true,
        "on-scroll-up": "dunstctl close",
        "on-scroll-down": "dunstctl history-pop"
    },

        "custom/copyq": {
        "format": "Û∞Öç",
        "on-click": "copyq toggle",
        "tooltip": false
    },

     "clock": {
        "format": "{:%R}",
        "rotate": 0,
        "format-alt": "{:%R | %d/%m/%y}",
        "tooltip-format": "<span>{calendar}</span>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b>{}</b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },

    "custom/timer": {
        "align": 0,
        "tooltip": false,
        "exec": "$HOME/.config/hypr/scripts/waybar-timer.sh",
        "on-click": "date --date='30 minutes' +%s > /var/tmp/waybar_timer",
        "on-click-right": "echo READY > /var/tmp/waybar_timer",
        "on-click-middle": "date --date='45 minute' +%s > /var/tmp/waybar_timer",
        "on-scroll-up": "$HOME/.config/hypr/scripts/waybar-timer-steps.sh up",
        "on-scroll-down": "$HOME/.config/hypr/scripts/waybar-timer-steps.sh down",
        "interval": 1
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔàÖ",
            "deactivated": "ÔàÑ"
        }
    },

    "cpu": {
        "interval": 10,
        "format": "Û∞çõ {usage}%",
        "format-alt": "{icon0}{icon1}{icon2}{icon3}",
        "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"]
    },

    "custom/padd": {
        "format": "",
        "interval" : "once",
        "tooltip": false
    },

    "custom/gpuinfo": {
        "exec": " ~/.config/hypr/scripts/gpuinfo.sh",
        "return-type": "json",
        "format": "Ôãã {}",
        "interval": 5, // once every 5 seconds
